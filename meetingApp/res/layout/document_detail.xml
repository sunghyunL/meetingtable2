<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
     
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
       android:id="@+id/linearlayout_document_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageview_document_detail" 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5" 
            android:src="@drawable/ic_launcher"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
         <ImageView 
             android:layout_width="0dp" 
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:src="@drawable/ic_launcher"
             />
        <TextView
            android:id="@+id/textview_document_detail_name" 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="textview_document_detail_name"
            android:gravity="center"
            />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
         <ImageView 
             android:layout_width="0dp" 
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:src="@drawable/ic_launcher"
             />
        <TextView
            android:id="@+id/textview_document_detail_modify" 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="textview_document_detail_modify"
            android:gravity="center"
            />
        </LinearLayout>
                <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
         <ImageView 
             android:layout_width="0dp" 
             android:layout_height="match_parent"
             android:layout_weight="1"
             android:src="@drawable/ic_launcher"
             />
        <TextView
            android:id="@+id/textview_document_detail_capacity" 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:text="textview_document_detail_capacity"
            android:gravity="center"
            />
        </LinearLayout>
    </LinearLayout>
    
    <ImageView
        android:id="@+id/imageView_document_detail_arrow"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/arrowanim" 
        />
    
</FrameLayout>