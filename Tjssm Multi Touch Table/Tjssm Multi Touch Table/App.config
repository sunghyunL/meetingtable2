<?xml version="1.0"?>
<configuration>
  <appSettings>
    <!-- Used for configuring the TUIO receiver -->
    <add key="port" value="3333"/>
    
    <!-- File example within Config dir.  Allows for fine grain config of tracking data. -->
    <add key="trackingpath" value="Config\UserSettings.xml"/>
    <!-- Specifies whether or not to apply the projection correction for the tracking file above -->
    <add key="correctprojection" value="false"/>

    <!-- Specifies whether or not to start the application in fullscreen mode -->
    <add key="startfullscreen" value="false"/>

    <!-- Depending on your tracking sender, you might need to flip the data -->
    <add key="flipx" value="false"/>
    <add key="flipy" value="false"/>
  </appSettings>
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5"/></startup></configuration>
