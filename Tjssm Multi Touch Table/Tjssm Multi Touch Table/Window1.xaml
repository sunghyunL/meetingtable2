<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Tjssm_Multi_Touch_Table" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Tjssm_Multi_Touch_Table.Window1" 
    Title="Window1" Width="1300" Height="995" Loaded="Window_Loaded" KeyDown="Window_KeyDown" Background="Black" Closed="Window_Closed">

    <Canvas x:Name="canvas1" HorizontalAlignment="Left" Height="975" VerticalAlignment="Top" Width="1300" Margin="0,0,-8,-2">
        <Image x:Name="background" Height="975" Width="1300" HorizontalAlignment="Left" VerticalAlignment="Top" Source="Resources/bg1.png"/>
        <Canvas x:Name="smartPhone_canvas" Height="344" Canvas.Left="0" Canvas.Top="0" Width="190" Panel.ZIndex="10" RenderTransformOrigin="0.5,0.5">
            <Button x:Name="smartPhone_img" Content="Button" Width="190" Height="344" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="smartPhone_img_Click">
                <Button.Background>
                    <ImageBrush ImageSource="Resources/smartPhone.png"/>
                </Button.Background>
            </Button>
        </Canvas>
        <Ellipse x:Name="myEllipse" Fill="#FF21D621" Height="10" Stroke="#FF0A0A8D" Width="10" RenderTransformOrigin="-28.3,-15.2" Canvas.Left="0" Canvas.Top="0" Panel.ZIndex="20"/>
    </Canvas>
</Window>
